<%= bootstrap_form_for(@goal) do |f| %>
    <%= f.hidden_field :id %>

    <%= f.collection_select :project_id, current_user.projects.primary_or_owner, :id, :address, :prompt => true %>

    <%= f.text_field :title %>

    <%= f.text_field :description %>

    <%= f.number_field :budget %>

    <%= f.select :difficulty, [["Not Rated", "Not Rated"], ["Easy DIY", "Easy DIY"], ["Requires New Skills", "Requires New Skills"], ["Hire an Expert", "Hire an Expert"]] %>

    <%= f.select :priority, [["Not Rated", "Not Rated"], ["High", "High"], ["Medium", "Medium"], ["Low", "Low"]] %>

    <%= f.select :time_commitment, [["Unrated", "Unrated"], ["Under 1 Hour", "Under 1 Hour"], ["1-2 Hours", "1-2 Hours"], ["Half Day", "Half Day"], ["Full Day", "Full Day"], ["Weekend", "Weekend"], ["Long Term", "Long Term"]] %>

    <%= f.select :status, [["Not Started", "Not Started"], ["Incomplete", "Incomplete"], ["Completed", "Completed"]] %>

    <% if @goal.status == "Completed" %>

        <%= f.text_field :time_spent %>

        <%= f.text_field :cost %>

    <% end %>

    <%= f.submit nil, class: 'btn btn-secondary' %>
<% end %>