<div class="row">
    <div class="col"> 
        <div class="card" >
            <div class="card-body">

                <h1> Completed Goals </h1>
            </div>
        </div> 
    </div>
</div>

    <% @goals.each.with_index(1) do |goal, i| %>
<div class="row">
    <div class="col">
        <div class="card" >
        
            <div class="card-header">
                <h3 class="text-center"><%= i %>. <%= link_to goal.title, goal_path(goal) %> at <%= goal.project.address %></h3>
            </div>

            <div class="card-body">


                <% if goal.images.any? %>

                    <% goal.images.after.each do |image| %>
                        <h5 class="card-title text-center" ><%= image.genre %>: <%= image.caption %></h5>

                        <img class="mx-auto d-block img-fluid"" src="<%=image.url%>" alt="<%=image.caption%>"></br>
                    <% end %>
                
                <% else %>

                    <%= button_to "Add an After Image to Celebrate!", new_goal_image_path(goal), method: "get", :class => "btn btn-outline-primary" %>


                <% end %>
            </div>
        </div>
    </div>
</div>
    <% end %>


