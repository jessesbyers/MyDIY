<div class="row">
    <div class="col"> 
 
        <h1> Gallery of Completed Goals </h1>

    </div>
</div>

    <% @goals.each.with_index(1) do |goal, i| %>
<div class="row">
    <div class="col">
        <div class="card" >
        
            <div class="card-header">
                <h3 class="text-center"><%= i %>. <%= link_to goal.title, goal_path(goal) %> at <%= goal.project.address %></h3>
            </div>

            <div class="card-body">


                <% if goal.images.any? %>

                    <% goal.images.after.each do |image| %>
                        <h5 class="card-title text-center" ><%= image.genre %>: <%= image.caption %></h5>

                        <img class="mx-auto d-block" src="<%=image.url%>" alt="<%=image.caption%>"></br>
                    <% end %>
                
                <% else %>

                    <button><%= link_to "Add an After Image to Celebrate!", goal_images_path(goal) %></button>

                <% end %>
            </div>
        </div>
    </div>
</div>
    <% end %>


