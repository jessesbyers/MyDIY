<div class="row">
    <div class="col-sm">
        <div class="card">
            <div class="card-body">

                <h1>My Goals</h1>
                <h3>Choose a Filter</h3>

                <%= form_tag(goals_path, method: :get) do %>
                    <%= select_tag :status, options_for_select(["Not Started", "Incomplete", "Completed"]), {:include_blank => 'Filter by Completion Status', onchange: 'this.form.submit();'} %>
                <% end %>

            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm">
        <div class="card">

        <% if @goals.completed.any? %>
            <h3> Completed </h3>
                <ul>
                    <%= raw list_goals(@goals.completed) %>
                </ul>
        <% end %>

        <% if @goals.incomplete.any? %>
            <h3> Incomplete </h3>
                <ul>
                    <%= raw list_goals(@goals.incomplete) %>
                </ul>
        <% end %>

        <% if @goals.not_started.any? %>
            <h3> Not Started </h3>
                <ul>
                    <%= raw list_goals(@goals.not_started) %>
                </ul>
        <% end %>

        </div>
    </div>
</div>





