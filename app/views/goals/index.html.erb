<div class="row">
    <div class="col-sm">
        <div class="card">
            <div class="card-body">

                <h1>My Goals</h1>

                <%= form_tag(goals_path, method: :get) do %>
                    <%= text_field_tag :title %>
                    <%= submit_tag "Search by Goal Title", :class=> "btn btn-outline-primary" %>
                <% end %>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-4">

        <% if @goals.completed.any? %>
        <div class="card">

        <h3> Completed </h3>

            <div class="card-body">

                <ul>
                    <%= raw list_goals(@goals.completed) %>
                </ul>

            <% end %>

            </div>
        </div>
    </div>

    <div class="col-sm-4">

        <% if @goals.incomplete.any? %>
            <div class="card">

            <h3> Incomplete </h3>

            <div class="card-body">


                <ul>
                    <%= raw list_goals(@goals.incomplete) %>
                </ul>
        <% end %>

            </div>
        </div>
    </div>

    <div class="col-sm-4">

    <% if @goals.not_started.any? %>
        <div class="card">

                <h3> Not Started </h3>
                <ul>
                    <%= raw list_goals(@goals.not_started) %>
                </ul>
            <% end %>
            </div>
        </div>
    </div>
</div>

   